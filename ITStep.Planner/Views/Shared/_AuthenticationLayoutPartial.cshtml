@if(User.Identity.IsAuthenticated)
{
    <p class="navbar-brand">@User.Identity.Name</p>
 
    <form method="post" asp-controller="Account" asp-action="Logout" id="LogoutForm">
        <button type="submit" style="cursor: pointer;" class="btn btn-link">Выход</button>
    </form>
}
else
{
    <div class="btn-group">
        <a class="btn btn-link btn-login" asp-controller="Account" asp-action="Login">Вход</a>
        <a class="btn btn-link btn-login" asp-controller="Account" asp-action="Register">Регистрация</a>
    </div>
}
